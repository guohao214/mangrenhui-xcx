.primary-color {
  color: #E03B58;
}

.primary-btn {
  background-color: #E03B58 !important;
  font-size: 35rpx;
}

.add-pet-view {
  display: flex;
  justify-content: center;
  margin-top: 90rpx;
  
}

.add-pet {
  color: #E03B58;
  font-size: 33rpx;
  text-decoration: underline;
}

.active {
  /* border-radius: 50%; */
  position: relative;
}

.active .avatar {
  /* border: 5rpx solid #E03B58; */
