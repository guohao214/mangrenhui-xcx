Page {
  /*width: 100%;*/
  overflow-x: hidden;
}
.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}
.flex .label-title {
  border-left: 5rpx solid #E03B58;
  padding-left: 10px;
  height: 25rpx;
  line-height: 25rpx;
}
.flex-column {
  flex-direction: column;
}
.align-start {
  align-items: flex-start;
}

.header {
  height: 80rpx;
  border-bottom: 1rpx solid rgb(228,228,228);
  padding: 0 15rpx;
  justify-content: flex-start;
}
.cell {
  display: block;
  width: 100%;
  font-size: 27rpx;
  margin-bottom: 15rpx;
  background-color: white;
}

.cell-top15 {
  margin-top: 15rpx;
}

.footer {
  padding: 30rpx;
}

.avatar {
  padding: 5rpx;
}

.active {
  color: #E03B58;
  font-weight: bold;
  /*border: 1px solid red;*/
}

.active .avatar {
