}



.icon {
  display: none;
}

.active .icon {
  position: absolute;
  display: block;
  top: 0;
  right: 20rpx;
  background-color: #E03B58;
  border-radius: 50%;
  height: 40rpx;
  width: 40rpx;
}

.project.active .icon  {
  right: 50rpx;
}

.beautician.active .avatar {
  border: 5rpx solid #E03B58;
}

