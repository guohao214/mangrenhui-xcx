<view>
    <layout-head _pid="{{_pid}}"></layout-head>

    <!-- page页面占位符 -->
    <view class="header-cell">
        <wxc-avatar class="avatar" mold="circle" src="{{ avatarUrl }}" _pid="{{_pid}}">
        </wxc-avatar>
        <text>{{ nickName }}</text>
    </view>

    <view class="cell">
        <view class="order">
            我的订单
        </view>
        <view class="go">
            <navigator url="/pages/order/index?type=all" open-type="switchTab">
                <wxc-icon size="30" type="arrow-right" _pid="{{_pid}}"></wxc-icon>
            </navigator>
        </view>
    </view>

    <view class="cell last-cell">
        <view class="phone">
            <text class="call-phone" bindtap="callPhone">联系我们：189-6678-6655</text>
        </view>
    </view>

    <!--<layout-foot></layout-foot>-->
</view>