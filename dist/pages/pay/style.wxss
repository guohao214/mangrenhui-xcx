.order-list {
  margin: 20rpx 0;
  background-color: white;
  font-size: 26rpx;
}
.cell {
  display: flex;
  height: 80rpx;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}

.project .cell {
  height: 70rpx;
}

.project .cell .label {
  width: 120rpx;
  text-align: right;
}

.cell.amount {
  border-bottom: 1rpx solid rgb(228,228,228);
}

.control {
  height: 130rpx;
  border-top: 1rpx solid rgb(228,228,228);
}
.control .buttons {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  margin-top: 25rpx;
}

.control .buttons button {
  width: 200rpx;
  margin: 0 20rpx;
  padding: 1rpx;
  font-size: 28rpx;
  
}

.control .pay-type {
  padding: 0rpx 0 0 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  color: #E03B58;
}

.control .handled {
  display: flex;
  color: #888888;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.cancel-order {
  height: 80rpx;
  padding: 30rpx 15rpx 10rpx 15rpx;
  border-bottom: 1rpx solid rgb(228,228,228);
}

.cancel-order .btn {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 27rpx;
}

button[size=mini] {
  font-size: 25rpx;
}

.input {
  border:1rpx solid #ccc;
  margin:0 0 40rpx 0;
  padding:10rpx;
  width:100%;
  font-size:27rpx;

}

.project_name {
  width: 500rpx;
  text-align: right;
}