.page {
  height: 100Vh;
  width: 100vw;
}

.ucenter-bg {
  background-size: cover;
  height: 35vh;
  display: flex;
  justify-content: center;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: black;
  font-weight: 300;
  text-shadow: 0 0 3rpx rgba(0, 0, 0, 0.3);
}

.ucenter-bg text {
  opacity: 0.8;
}

.ucenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.ucenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

.body {
	position: absolute;
	bottom: 20vh;
	width: 80vw;
	left: 10vw;
}
.text-gray {
  font-size: 28rpx;
  color: black;
  display: block;
  text-align: center;
  padding: 5rpx;
}

